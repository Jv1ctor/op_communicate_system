<div class="modal-register-produto" data-js="modal">
      <div class="modal-register-produto-content">
        <i class="fa-solid fa-xmark button-exit" data-js="button-exit"></i>
        <form class="form-register-product" data-js="form-register">
          <h2 class="register-produto-form-title">Cadastrar Produto</h2>

          <div class="register-produto-form-container">
            <div class="form-fields">
              <label for="name">Nome:</label>
              <input type="text" id="name" data-type="string" value="produto" />
            </div>

            <div class="form-fields">
              <label for="qnt">Quantidade(kg):</label>
              <input type="text" id="qnt" data-type="decimal" value="123" />
            </div>

            <div class="form-fields">
              <label for="num-op">Número-OP:</label>
              <input type="text" id="num-op" data-type="number" value="123" />
            </div>

            <div class="form-fields">
              <label for="turn-supervisor">Supervisor de Turno:</label>
              <input type="text" id="turn-supervisor" data-type="string" value="teste1" />
            </div>

            <div class="form-fields">
              <label for="num-roadmap">Número-Roteiro:</label>
              <input type="text" id="num-roadmap" data-type="number" value="123" />
            </div>

            <div class="form-fields">
              <label for="name-operator">Operador:</label>
              <input type="text" id="name-operator" data-type="string" value="teste2" />
            </div>

            <div class="form-fields">
              <label for="num-batch">Número-Lote:</label>
              <input type="text" id="num-batch" data-type="number" value="123" />
            </div>

            <div class="form-fields">
              <label for="turn">Turno:</label>
              <select id="turn">
                <option value="-1">Selecione o Turno</option>
                <option value="A">A</option>
                <option value="B">B</option>
              </select>
            </div>
          </div>

          <button class="button" data-js="button-confirm">Cadastrar</button>
        </form>
      </div>
    </div>