{
  "name": "op_communicate_system",
  "description": "projeto de comunicação de OP da AVCO",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "dev": "nodemon -e mustache,ts,json src/app.ts",
    "db:create": "npx prisma migrate deploy",
    "db:migrate": "npx prisma migrate dev",
    "db:seed": "ts-node src/database/seeders/seed.ts",
    "build": "tsc && copyfiles -u 1 src/**/*.mustache dist/ && npx prisma db push",
    "start": "node dist/app.js",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "João Victor",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^5.1.1",
    "cookie-parser": "^1.4.6",
    "copyfiles": "^2.4.1",
    "dayjs": "^1.11.10",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "helmet": "^7.0.0",
    "jsonwebtoken": "^9.0.2",
    "mustache-express": "^1.3.2",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@fortawesome/fontawesome-free": "^6.4.2",
    "@prisma/client": "^5.4.2",
    "@types/bcrypt": "^5.0.0",
    "@types/cookie-parser": "^1.4.5",
    "@types/express": "^4.17.18",
    "@types/helmet": "^4.0.0",
    "@types/jsonwebtoken": "^9.0.3",
    "@types/mustache-express": "^1.2.5",
    "@types/node": "^20.8.4",
    "@types/uuid": "^9.0.5",
    "prisma": "^5.4.2"
  }
}
